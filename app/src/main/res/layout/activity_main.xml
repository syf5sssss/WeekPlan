<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <com.work.weekplan.NoScrollViewPager
        android:id="@+id/fragment_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabs_rg" />

    <RadioGroup
        android:id="@+id/tabs_rg"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/today_tab"
            style="@style/Custom.TabRadioButton"
            android:checked="true"
            android:textColor="@color/black"
            android:drawableTop="@drawable/tab_sign_selector"
            android:text="今日" />

        <RadioButton
            android:id="@+id/record_tab"
            style="@style/Custom.TabRadioButton"
            android:textColor="@color/black"
            android:drawableTop="@drawable/tab_record_selector"
            android:text="事件" />

        <RadioButton
            android:id="@+id/contact_tab"
            style="@style/Custom.TabRadioButton"
            android:textColor="@color/black"
            android:drawableTop="@drawable/tab_contact_selector"
            android:text="项目" />

        <RadioButton
            android:id="@+id/sentence_tab"
            style="@style/Custom.TabRadioButton"
            android:textColor="@color/black"
            android:drawableTop="@drawable/tab_collect_selector"
            android:text="收藏" />
        <RadioButton
            android:id="@+id/settings_tab"
            style="@style/Custom.TabRadioButton"
            android:textColor="@color/black"
            android:drawableTop="@drawable/tab_settings_selector"
            android:text="设置" />

    </RadioGroup>


</RelativeLayout>