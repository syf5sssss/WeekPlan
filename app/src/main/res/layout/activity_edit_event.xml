<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/edit_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:textAlignment="center"
        android:text="修改事件"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/edit_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_background"
        android:layout_below="@+id/edit_event_title"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/edit_radio_Enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginLeft="30dp"
            android:text="已完成"
            android:textColor="@color/color6"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/edit_radio_Disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="未完成"
            android:textColor="@color/color6"
            android:textSize="30sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/edit_plan_data"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:text="  1.世界和平\n  2.西天取经\n  3.长生不老"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_radioGroup"
        android:background="@drawable/edit_background"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/edit_submit_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/edit_plan_data"
        android:text="提交"
        android:textColor="@color/black"
        android:background="@color/color6"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />
    <Button
        android:id="@+id/edit_delete_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edit_plan_data"
        android:text="删除"
        android:textColor="@color/black"
        android:background="@color/color6"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

</RelativeLayout>