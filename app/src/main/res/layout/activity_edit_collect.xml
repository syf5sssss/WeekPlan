<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_background"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/edit_collect_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:text="调整名言警句"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:id="@+id/author_edit_text"
        android:background="@drawable/edit_background"
        android:layout_below="@+id/edit_collect_title"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="名称:"
            android:textColor="#000000"
            android:textSize="19sp" />
        <EditText
            android:id="@+id/edit_collect_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="卡尔·海因里希·马克思"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="19sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/edit_collect_data"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="经济基础决定上层建筑。"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/author_edit_text"
        android:textColor="@color/black"
        android:textSize="40px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_background"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/submit_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="提交"
        android:layout_below="@+id/edit_collect_data"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:background="@color/color6"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/delete_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edit_collect_data"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="删除"
        android:textColor="@color/black"
        android:background="@color/color6"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

</RelativeLayout>